# Server configuration
PORT=3001
NODE_ENV=development

# MongoDB URI
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# Authentication
# JWT secret key (use a strong secret in production)
JWT_SECRET=your_strong_jwt_secret_here
# Optional separate refresh token secret (if not set, JWT_SECRET will be used)
REFRESH_TOKEN_SECRET=your_strong_refresh_token_secret_here
# JWT token expiry times
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS settings
CORS_ORIGIN=http://localhost:3000

# Swagger documentation
ENABLE_SWAGGER=true 